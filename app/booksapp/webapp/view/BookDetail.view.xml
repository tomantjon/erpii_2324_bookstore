<mvc:View controllerName="my.booksapp.controller.BookDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <Page title="{i18n>bookDetailTitle}">
        <VBox >
            <Input id="inBookID"
                value="{ID}"
                visible="false" />
            <Label text="Title: {title}"></Label>
            <Label text="Author: {author/name}"></Label>
            <Label text="Books in Stock: {stock}"></Label>
        </VBox>
        <form:SimpleForm id="Submit"
            binding="{/submitOrder(...)}">
            <Button type="Default"
                text="Order now!"
                press="handleOrderPressed"></Button>
        </form:SimpleForm>


    </Page>
</mvc:View>